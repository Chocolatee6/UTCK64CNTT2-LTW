@{
}
<div class="h4 text-center bg-secondary text-white w-100 py-xl-2 rounded">Sản phẩm bán chạy</div>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3 m-auto w-100">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 mb-3">
            <div class="card h-100">
                <img src="@item.ImgURL" class="img-fluid mt-2" />
                <div class="card-body text-center">
                    <p class="h5">@item.Name</p>
                </div>
            </div>
        </div>
    }
</div>